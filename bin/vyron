#! /usr/bin/env node

const program = require('commander');
const { getVersion, printVersion } = require('../util');
const config = require('../config').default;

printVersion();

program
    .version(getVersion())
    .usage('<command> [options]')
    .command(`create [${config.program}] [projectName] [description]`, 'Init a project with default templete')
    .alias('init')
    .command('update', 'Update vyron cli')
    .command('remove [path]', 'Remove directory or file')
    .parse(process.argv);